<div class="swiper-slide">
	<div class="slide-inner" style="background-image:url({{ file_url(paragraph.field_background_image.entity.field_media_image.entity.uri.value) }})">
		<div class="container">
			<div class="row">
				<div class="col-lg-8">
					<div class="header-text">
						{{paragraph.field_content.value|raw}}
						<div class="buttons">
              {% if paragraph.field_discover_more.uri %}
                <div class="green-button">
                  <a href="{{paragraph.field_discover_more.uri}}">{{paragraph.field_discover_more.title}}</a>
                </div>
              {% endif %}
              {% if paragraph.field_contact_us.uri %}
                <div class="orange-button">
                  <a href="{{paragraph.field_contact_us.uri}}">{{paragraph.field_contact_us.title}}</a>
                </div>
              {% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>